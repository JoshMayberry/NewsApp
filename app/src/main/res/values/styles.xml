<resources>
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorSecondary</item>
	</style>

	<style name="TextAppearance.NewsApp.Title" parent="TextAppearance.AppCompat.Display1">
		<item name = "android:ellipsize">end</item>
		<item name = "android:maxLines">1</item>
	</style>

	<style name="TextAppearance.NewsApp.Abstract" parent="TextAppearance.AppCompat.Small">
		<item name = "android:ellipsize">end</item>
		<item name = "android:maxLines">2</item>
	</style>

	<style name="TextAppearance.NewsApp.Detail" parent="TextAppearance.AppCompat.Small">
		<item name = "android:ellipsize">end</item>
		<item name = "android:maxLines">1</item>
		<item name = "android:fontFamily">sans-serif-medium</item>
		<item name = "android:textAllCaps">true</item>
	</style>

	<style name="TextAppearance.NewsApp.Error.Title" parent="TextAppearance.AppCompat.Display1">
	</style>

	<style name="TextAppearance.NewsApp.Error.Message" parent="TextAppearance.AppCompat.Large">
	</style>

	<style name="TextAppearance.NewsApp.Error.Button" parent="TextAppearance.AppCompat.Large">
	</style>


</resources>
